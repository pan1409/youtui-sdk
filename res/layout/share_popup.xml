<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/share_popup_textlinearlayout" >

        <android.support.v4.view.ViewPager
            android:id="@+id/share_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:padding="10dip" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/share_popup_textlinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancel_bt"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/share_popup_knowtv"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="了解积分活动"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/share_popup_checktv"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="查看我的积分"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:id="@+id/cancel_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_style_alert_dialog_cancel_normal"
        android:gravity="center"
        android:text="取消" />

</RelativeLayout>